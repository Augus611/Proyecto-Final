<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#010F1B"
    tools:context=".Perfil">

    <androidx.cardview.widget.CardView
        android:layout_width="340dp"
        android:layout_height="642dp"
        android:layout_marginStart="35dp"
        android:layout_marginTop="44dp"
        android:layout_marginEnd="36dp"
        android:layout_marginBottom="45dp"
        app:cardBackgroundColor="#010F1B"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/NombreUsuario"
                android:layout_width="254dp"
                android:layout_height="48dp"
                android:layout_marginTop="80dp"
                android:fontFamily="@font/pressstart_normal"
                android:gravity="center"
                android:text="TextView"
                android:textColor="#4CAF50"
                android:textSize="20sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/ImagenPerfil"
                app:layout_constraintVertical_bias="0.023" />

            <ImageView
                android:id="@+id/ImagenPerfil"
                android:layout_width="123dp"
                android:layout_height="100dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.502"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.129"
                app:srcCompat="@drawable/spaceship" />

            <TextView
                android:id="@+id/LabelDesc"
                android:layout_width="230dp"
                android:layout_height="36dp"
                android:fontFamily="@font/pressstart_normal"
                android:gravity="center"
                android:text="Puntaje maximo:"
                android:textColor="#4CAF50"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/NombreUsuario"
                app:layout_constraintVertical_bias="0.1" />

            <TextView
                android:id="@+id/PuntajeMaximo"
                android:layout_width="118dp"
                android:layout_height="49dp"
                android:layout_marginTop="16dp"
                android:fontFamily="@font/pressstart_normal"
                android:gravity="center"
                android:text="TextView"
                android:textColor="#4CAF50"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/LabelDesc"
                app:layout_constraintVertical_bias="0.0" />

            <Button
                android:id="@+id/button4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="#4CAF50"
                android:fontFamily="@font/pressstart_normal"
                android:text="Cerrar sesion"
                android:textColor="#FFFFFF"
                android:textSize="14sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.509"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/PuntajeMaximo"
                app:layout_constraintVertical_bias="0.661" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>